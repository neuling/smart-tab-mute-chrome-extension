{
  "manifest_version": 2,
  "name": "Smute - Smart Tab Mute",
  "description": "Ensures only one tab at once is playing sound",
  "version": "1.0.0",
  "icons": {
    "16": "images/icon128.png",
    "48": "images/icon128.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs"
  ]
}
